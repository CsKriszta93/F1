@model List<F1TeamManager.ViewModels.TeamViewModel>

@{
    ViewBag.Title = "F1TM";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Teams</title>
</head>
<body>
    <h2>Registered F1 Teams</h2>
    
        <table class="table table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center text-uppercase"><h5>Team</h5></th>
                    <th class="text-center text-uppercase"><h5>Founded</h5></th>
                    <th class="text-center text-uppercase"><h5>World Championship Titles</h5></th>
                    <th class="text-center text-uppercase"><h5>Membership Fee</h5></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@team.Name, "Edit", new { id = team.Id }, null)</td>
                        <td>@team.Founded</td>
                        <td>@team.WorldChampionshipsWon</td>
                        <td>
                            @(team.IsPaidForMembership ? "Paid" : "Not paid")
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "Teams", FormMethod.Post))
                            {
                                <input type="hidden" name="Id" value="@team.Id" />
                                <button class="btn btn-danger" type="submit">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</body>
</html>


